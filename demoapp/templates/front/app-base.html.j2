<!doctype html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Python Demoapp: frontend</title>
    <link rel="stylesheet" href="/static/contrib/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/static/contrib/bootstrap-table.min.css">
    <link rel="stylesheet" href="static/main-app.css">

    <script src="/static/contrib/bootstrap.bundle.min.js"></script>
    <script src="/static/contrib/jquery.min.js"></script>
    <script src="/static/contrib/bootstrap-table.min.js"></script>

    <script type="module">
      import { getUserInfo } from "/static/orders-api.js"

      window.addEventListener('load', async (event) => {
        window.userInfo = await getUserInfo()
        console.log(window.userInfo)
      });
    </script>
  </head>
  <body>
    <main class="d-flex flex-nowrap">

    {% set orders_style = "text-white" if page_name != "about" else "text-secondary" %}
    {% set about_style = "text-white" if page_name == "about" else "text-secondary" %}

      <!-- Left sidebar and navigation -->
      <div id="leftSidebar" class="d-flex flex-column p-3 bg-body-tertiary" style="width: 230px;">
        <a href="/" class="d-flex align-items-center mb-2 text-white text-decoration-none">
          <img class="bi me-2" width="35" src="static/appservice.svg" />
          <span class="fs-4 me-3">DemoApp</span>
        </a>
        <hr/>
        <ul class="nav flex-column mb-auto">
          <li class="nav-item">
            <a href="{{ url_for('get_page', page_name='new') }}" class="nav-link {{ orders_style }} link-body-emphasis h4">
              <i class="bi bi-table"></i>&nbsp;
              Orders
            </a>
          </li>
          <li class="nav-item">
            <a href="{{ url_for('get_page', page_name='about') }}" class="nav-link {{ about_style }} link-body-emphasis">
              <i class="bi bi-info-circle"></i>&nbsp;
              About
            </a>
          </li>
        </ul>

        <hr/>

        {% if username %}
        <!-- Logged in user data -->
        <div class="dropdown mb-4 mt-2">
          <a class="d-flex align-items-center link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown">
            <img src="https://github.com/mdo.png" width="32" height="32" class="rounded-circle me-2"/>
            <strong>{{ username }}</strong>
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="{{ logout_path }}">Logout</a></li>
          </ul>
        </div>
        {% else %}
        <!-- Login button -->
        <a class="btn btn-outline-light mb-4 mt-2" href="{{ login_path }}">Login</a>
        {% endif %}
      </div>

      <!-- Right content block -->
      <div class="d-flex flex-nowrap flex-column flex-fill">
        {% block main_content %}
        Content part
        {% endblock %}
      </div>

  </main>
</body>
</html>
