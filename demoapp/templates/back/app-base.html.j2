<!doctype html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Demoapp: Background processor</title>
    <link rel="stylesheet" href="/static/contrib/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/static/contrib/bootstrap-table.min.css">
    <link rel="stylesheet" href="static/main-app.css">

    <script src="/static/contrib/bootstrap.bundle.min.js"></script>
    <script src="/static/contrib/jquery.min.js"></script>
    <script src="/static/contrib/bootstrap-table.min.js"></script>

  </head>
  <body>
    <main class="d-flex flex-nowrap">

    {% set orders_style = "text-white" if page_name != "about" else "text-secondary" %}
    {% set about_style = "text-white" if page_name == "about" else "text-secondary" %}

      <!-- Left sidebar and navigation -->
      <div id="leftSidebar" class="d-flex flex-column p-3 bg-body-tertiary" style="width: 230px;">
        <a href="/" class="d-flex align-items-center mb-2 text-white text-decoration-none">
          <img class="bi me-2" width="35" src="static/appservice.svg" />
          <span class="fs-4 me-3">DemoApp</span>
        </a>
        <span class="fs-5 me-3">Backend processor</span>
        <hr/>
        <ul class="nav flex-column mb-auto">
          <li class="nav-item">
            <a href="{{ url_for('get_page', page_name='processing') }}" class="nav-link {{ orders_style }} link-body-emphasis h4">
              <i class="bi bi-table"></i>&nbsp;
              Processing
            </a>
          </li>
          <li class="nav-item">
            <a href="{{ url_for('get_page', page_name='about') }}" class="nav-link {{ about_style }} link-body-emphasis">
              <i class="bi bi-info-circle"></i>&nbsp;
              About
            </a>
          </li>
        </ul>

        <hr/>
      </div>

      <!-- Right content block -->
      <div class="d-flex flex-nowrap flex-column flex-fill">
        {% block main_content %}
        Content part
        {% endblock %}
      </div>

  </main>
</body>
</html>
