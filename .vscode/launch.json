    "version": "0.2.0",
    "configurations": [
        {
            "name": "Front",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "demoapp.front:app",
                "--reload",
                "--host",
                "localhost",
                "--port",
                "8000"
            ],
            "envFile": "${workspaceFolder}/front.env",
            "jinja": true,
            "justMyCode": true,
            "consoleTitle": "Front"
        },
        {
            "name": "Worker",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "demoapp.back:app",
                "--reload",
                "--host",
                "localhost",
                "--port",
                "8100"
            ],
            "envFile": "${workspaceFolder}/back.env",
            "jinja": true,
            "justMyCode": true,
            "consoleTitle": "DB-Worker"
        },
        {
            "name": "Testapp",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "demoapp.testapp:app",
                "--reload",
                "--host",
                "localhost",
                "--port",
                "8200"
            ],
            "envFile": "${workspaceFolder}/back.env",
            "jinja": true,
            "justMyCode": true,
            "consoleTitle": "Testapp"
        },
    ],
    "compounds": [
        {
            "name": "Python: Front/Worker",
            "configurations": [ "Front", "Worker" ],
            "stopAll": true
        }
    ]
}